#d - Eine Funktion, die geeignete deskriptive bivariate Statistiken fuer
#den Zusammengang zwischen einer metrischen und einer
#dichotomen Variablen berechnet und ausgibt





#e)

#e -  Eine Funktion, die eine mindestens ordinal skalierte Variable
#quantilbasiert kategorisiert (z.B. in "niedrig", "mittel", "hoch")
#
#
#Input: x = ordinal skalierter Vektor
#
#Output: Liste 
#
#

e = function(x)
{
  if (!is.numeric(x)){
    return("Variablen sind nicht ordinal")
  }
  else
  {
    v = c()
    for( i in 1:length(x))
    {
      if(x[i] < quantile(x,0.25))
      {
        v[i] = "niedrig"
      }
      if(x[i] >= quantile(x,0.25) & x[i] <= quantile(x,0.65))
      {
        v[i] = "mittel"
      }
      if(x[i] > quantile(x,0.65))
      {
        v[i] = "hoch"
      }
    }
    tabelle = table(v)
    return(list("Vektor" = v,"Tabelle" = tabelle))
  }
}


#f)
#
#f - Eine Funktion, die eine geeignete Visualisierung von drei oder vier
#kategorialen Variablen erstellt
#
#
#Input: x = Vektor mit kategoriellen Variablen
#       y = Vektor mit kategoriellen Variablen fuer Mosaikplot
#
#Output: je nachdem ob in x numerische Werte enthaelt werden 2 bis 4 Grafiken
#        zur Veranschaulichung der Daten abgebildet
#
#

f<-function(x,y)
{
  par(mar=c(5.1,4.1,2.1,2.1), mfrow=c(2,2))
if(is.numeric(x)){
 stripchart(x, method="stack",pch=22,at=0.2, axes=FALSE, bg="grey",
            xlim=range(pretty(x)))
 axis(1)
}
  
 if(is.numeric(x)){
 boxplot(x, horizontal=TRUE)
 }

  barplot(table(x), ylab= "absolute Haeufigkeiten", 
          xlab= deparse(substitute(x)),
          ylim = c(0, max(table(x)+6)))
  
  mosaicplot(~ x+y, main="Mosaikplot")
}


#f2)

f2 = function(a,b,c)
{
  par(mfrow = c(2,2),oma = c(0, 0, 2, 0))
  mtext("Visualisierung von kategorialen Variablen", outer = TRUE, cex = 2)
  
  barplot(table(a), ylab = "absolute Haeufigkeiten", xlab = deparse(substitute(a)),
          ylim = c(0, max(table(a)+5)), col = blues9[(3:9)], main = deparse(substitute(a)), cex.main = 1.5)
  pie(table(b), radius = 1, col = blues9[(2:9)], main = deparse(substitute(b)), cex.main = 1.5)
  boxplot(c, col = "lightblue", main = deparse(substitute(c)), cex.main = 1.5)
}

